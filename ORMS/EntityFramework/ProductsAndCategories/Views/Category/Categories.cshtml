@{
    ViewData["Title"] = "Categories";
}

@model List<Category>

<div class="text-center d-flex justify-content-around">
    <div class="border-end border-3 border-success px-5">
        <h1>New Category</h1>
        @{
            Category newCat = new Category();
        }
        @await Html.PartialAsync("_NewCategory", newCat)
    </div>
    <div>
        <h1>All Categories</h1>
        <div class="text-start mt-5">
            @{
                foreach(Category c in @Model)
                {
                    <a asp-action="OneCat" asp-controller="Category" asp-route-id="@c.CategoryId"><h3>@c.Name</h3></a>
                }
            }
        </div>
    </div>
</div>