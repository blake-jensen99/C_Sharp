@{
    ViewData["Title"] = "Add a New Dish";
}

@model Dish

<div class="text-center">
    <h1 class="display-4">Add a New Dish!</h1>
    <div class="d-flex justify-content-center">
        <a asp-action="Index" asp-controller="Home">Home</a>
        <p class="ms-1">| Add A Dish</p>
    </div>
    <form asp-action="CreateDish" asp-controller="Home" method="post" class="text-start d-flex justify-content-around">
        <div>
            <label asp-for="Chef"></label>
            <br>
            <input asp-for="Chef">
            <br>
            <span asp-validation-for="Chef"></span>
            <br>
            <label asp-for="Name"></label>
            <br>
            <input asp-for="Name">
            <br>
            <span asp-validation-for="Name"></span>
            <br>
            <label asp-for="Calories"></label>
            <br>
            <input asp-for="Calories">
            <br>
            <span asp-validation-for="Calories"></span>
        </div>
        <div>
            <label asp-for="Tastiness"></label>
            <br>
            <select name="Tastiness" class="mb-5 w-100">
                <option hidden>Select one</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <span asp-validation-for="Tastiness"></span>
            <br>
            <button type="submit" class="mt-5 btn btn-outline-success">Submit</button>
        </div>
        <div>
            <label asp-for="Description"></label>
            <br>
            <textarea name="Description"cols="30" rows="6"></textarea>
            <br>
            <span asp-validation-for="Description"></span>
        </div>
    </form>
</div>