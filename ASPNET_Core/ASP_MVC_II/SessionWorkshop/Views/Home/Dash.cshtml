@{
    ViewData["Title"] = "Dashboard";
}

<div class="text-center">
    <div class="d-flex gap-5 align-items-center justify-content-between">
        <h1>Welcome, @Context.Session.GetString("UserName")!</h1>
        <form asp-action="Logout" asp-controller="Home" method="post"><button type="submit"
                class="btn btn-outline-primary">Logout</button></form>
    </div>
    <hr>
    <h1 class="mt-5">@Context.Session.GetInt32("Num")</h1>

    <div class="d-flex justify-content-center">
        <div>
            <div class="d-flex gap-5 mb-5">
                <form asp-action="Alter" asp-controller="Home" method="post">
                    <input type="hidden" name="val" value="1">
                    <button type="submit" class="button btn btn-outline-success">
                        <h1>+1</h1>
                    </button>
                </form>
                <form asp-action="Alter" asp-controller="Home" method="post">
                    <input type="hidden" name="val" value="2">
                    <button type="submit" class="button btn btn-outline-warning">
                        <h1>-1</h1>
                    </button>
                </form>
            </div>
            <div class="d-flex gap-5">
                <form asp-action="Alter" asp-controller="Home" method="post">
                    <input type="hidden" name="val" value="3">
                    <button type="submit" class="button btn btn-outline-primary">
                        <h1>x2</h1>
                    </button>
                </form>
                <form asp-action="Alter" asp-controller="Home" method="post">
                    <input type="hidden" name="val" value="4">
                    <button type="submit" class="button btn btn-outline-danger">
                        <h1>+ Random</h1>
                    </button>
                </form>
            </div>
        </div>
    </div>

</div>